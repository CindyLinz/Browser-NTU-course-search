{
  "manifest_version": 3,
  "name": "NTU Course Search Helper",
  "version": "1.0.0",
  "description": "台大選課網站輔助工具，優化選課介面與功能",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://nol.ntu.edu.tw/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://nol.ntu.edu.tw/nol/coursesearch/search*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
